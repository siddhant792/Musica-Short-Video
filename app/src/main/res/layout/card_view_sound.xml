<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardid"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".All.card_view">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:padding="8dp"
            android:id="@+id/icon_playy"
            android:src="@drawable/round_new"
            android:layout_height="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Lehenga By Jass Manak"
            android:id="@+id/sound_name"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/icon_playy"
            android:layout_height="wrap_content"/>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/song_playing"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/play_cropped"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="25dp"
            android:id="@+id/select_this_btn"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/song_playing"
            android:src="@drawable/select_sound_ic"/>


    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>