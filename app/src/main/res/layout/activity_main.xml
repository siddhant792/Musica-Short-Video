<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".All.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_above="@+id/navbar"
        android:layout_height="match_parent"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/navbar"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_list"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/home_deactive"
                android:clickable="true"
                android:id="@+id/home"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:padding="9dp"
                android:src="@drawable/search_deactive"
                android:id="@+id/search"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="2dp"
                    android:visibility="invisible"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"

                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:padding="9dp"
                android:clickable="true"
                android:id="@+id/activity"
                android:src="@drawable/activity_deactive"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/profile_deactive"
                android:clickable="true"
                android:id="@+id/profile"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:background="@drawable/round_background_white"
            android:id="@+id/upload"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/round_new"
            />
    </RelativeLayout>




</RelativeLayout>