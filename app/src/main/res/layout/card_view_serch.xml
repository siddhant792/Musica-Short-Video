<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardid"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardview_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:id="@+id/clickable_id"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image_user_activity"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/default_picc"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/profile_image_user_activity"
                android:layout_toLeftOf="@+id/video_user_activity"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_username"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/average_sans"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="Username Sample"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_name"
                    android:gravity="center"
                    android:textColor="#434040"
                    android:layout_weight="1"
                    android:fontFamily="@font/average_sans"
                    android:textSize="17sp"
                    android:text="Name Sample"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>