<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".All.Discover">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/headersearch"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search User"
            android:textStyle="bold"
            android:id="@+id/temp6"
            android:gravity="center"
            android:fontFamily="@font/average_sans"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headersearch"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/searchlayout">

        <AutoCompleteTextView
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:hint="Enter Username"
            android:background="@drawable/bg_search"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColorHint="#424040"
            android:imeOptions="actionSearch"
            android:textSize="18sp"
            android:fontFamily="@font/average_sans"
            android:padding="13dp"
            android:textColor="#000"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/serachicon"
            android:layout_width="40dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_search2"
            android:src="@drawable/search" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/searchlayout"
        android:layout_marginLeft="25dp"
        android:id="@+id/temp8"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/temp7"
            android:layout_height="wrap_content"
            android:src="@drawable/top_search"
            android:tint="#000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/temp7"
            android:layout_marginLeft="7dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/average_sans"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="Top Searches"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_profile"
        android:layout_width="match_parent"
        android:layout_below="@id/temp8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content"
        android:background="#fff" />

</RelativeLayout>